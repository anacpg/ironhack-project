<form class="form-horizontal " style="border-radius:8px; border-solid: 1px; margin-top:30px">
  <fieldset>
    <legend>Add new bar</legend>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Location:</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" name="search-bar" id="js-search-bar" >
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Name</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" name="bar-name" id="js-bar-name" placeholder="Name">
      </div>
    </div>
    <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Description</label>
      <div class="col-lg-10">
        <textarea class="form-control" name="bar_description" rows="3" id="js-bar-description"></textarea>
        <span class="help-block"></span>
      </div>
    </div>
    <div class="row">
      <select name="neighborhood-list" form="form-districts-bar" class="form-districts-bar" disabled>
        <% @neighborhoods.each do |neighborhood| %>
        <option value='<%= neighborhood.id %>' id='<%= neighborhood.name %>' ><%= neighborhood.name%></option>
        <% end%>
      </select>
  </div>
    <div class="row">
           <div class="col-md-2">
             <small> Im√°genes </small>
           </div>
           <div class="col-md-8">
             <%= file_field_tag "images", id: 'fileUpload', type: :file, multiple: true %>
           </div>
    </div>
    <br>

    <button class="btn btn-primary" id="btn-add-bar" type="submit" style="float:rigth !important">Create Route</button>

  </fieldset>
</form>
